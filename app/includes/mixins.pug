mixin item(href, active)
	if(active)
		li(class="active"): a( href=href ): block
	else	
		li: a( href=href ): block
mixin button(buttonClass, modalTarget)

	- buttonClass = buttonClass || 'vbtn vbtn-effect-shutter-vertical-out vbtn-corp'

	if(modalTarget != null)
		- modalTarget = modalTarget
	else
		- modalTarget = "#modalform"

	button(class=buttonClass data-func="vmodal" data-target=modalTarget)&attributes(attributes): block
mixin headerBlock(img)
	.vak-xs-12.vak-sm-6.vak-md-3.header-block
		.header-block-inner
			.header-block-image
				img(src=img)
			p.header-block-text: block 
mixin rule(src)
	.vak-xs-12.vak-sm-6.vak-lg-2.rule
		img(src=src)
		p: block 
mixin review(src, name)
	.vak-xs-12.vak-sm-6.vak-lg-5.review-wrap
		.review
			.review-body: block 
			.review-inf
				.review-image: img(src=src)
				p.review-name= name
mixin step(src, number)
	.vak-xs-12.vak-sm-6.vak-md-3.step-wrap
		.step
			.step-header
				.step-image: img(src=src)
				p.step-title= number
			.step-line
			.step-body
				p: block 